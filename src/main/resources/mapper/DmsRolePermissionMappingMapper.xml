<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dms.mapper.DmsRolePermissionMappingDao">

    <resultMap type="com.example.dms.entity.DmsRolePermissionMapping" id="DmsRolePermissionMappingMap">
        <result property="mappingId" column="mapping_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DmsRolePermissionMappingMap">
        select
          mapping_id, role_id, permission_id
        from springboot.dms_role_permission_mapping
        where mapping_id = #{mappingId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DmsRolePermissionMappingMap">
        select
          mapping_id, role_id, permission_id
        from springboot.dms_role_permission_mapping
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DmsRolePermissionMappingMap">
        select
          mapping_id, role_id, permission_id
        from springboot.dms_role_permission_mapping
        <where>
            <if test="mappingId != null">
                and mapping_id = #{mappingId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="permissionId != null">
                and permission_id = #{permissionId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mappingId" useGeneratedKeys="true">
        insert into springboot.dms_role_permission_mapping(role_id, permission_id)
        values (#{roleId}, #{permissionId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update springboot.dms_role_permission_mapping
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="permissionId != null">
                permission_id = #{permissionId},
            </if>
        </set>
        where mapping_id = #{mappingId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from springboot.dms_role_permission_mapping where mapping_id = #{mappingId}
    </delete>

</mapper>
