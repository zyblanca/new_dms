<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dms.mapper.DmsPermissionDao">

    <resultMap type="com.example.dms.entity.DmsPermission" id="DmsPermissionMap">
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="permissionCode" column="permission_code" jdbcType="VARCHAR"/>
        <result property="permissionName" column="permission_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DmsPermissionMap">
        select
          permission_id, permission_code, permission_name
        from springboot.dms_permission
        where permission_id = #{permissionId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DmsPermissionMap">
        select
          permission_id, permission_code, permission_name
        from springboot.dms_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DmsPermissionMap">
        select
          permission_id, permission_code, permission_name
        from springboot.dms_permission
        <where>
            <if test="permissionId != null">
                and permission_id = #{permissionId}
            </if>
            <if test="permissionCode != null and permissionCode != ''">
                and permission_code = #{permissionCode}
            </if>
            <if test="permissionName != null and permissionName != ''">
                and permission_name = #{permissionName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="permissionId" useGeneratedKeys="true">
        insert into springboot.dms_permission(permission_code, permission_name)
        values (#{permissionCode}, #{permissionName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update springboot.dms_permission
        <set>
            <if test="permissionCode != null and permissionCode != ''">
                permission_code = #{permissionCode},
            </if>
            <if test="permissionName != null and permissionName != ''">
                permission_name = #{permissionName},
            </if>
        </set>
        where permission_id = #{permissionId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from springboot.dms_permission where permission_id = #{permissionId}
    </delete>

</mapper>
