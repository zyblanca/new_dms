<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dms.mapper.DmsUserRoleMappingDao">

    <resultMap type="com.example.dms.entity.DmsUserRoleMapping" id="DmsUserRoleMappingMap">
        <result property="mappingId" column="mapping_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DmsUserRoleMappingMap">
        select
          mapping_id, user_id, role_id
        from springboot.dms_user_role_mapping
        where mapping_id = #{mappingId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DmsUserRoleMappingMap">
        select
          mapping_id, user_id, role_id
        from springboot.dms_user_role_mapping
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DmsUserRoleMappingMap">
        select
          mapping_id, user_id, role_id
        from springboot.dms_user_role_mapping
        <where>
            <if test="mappingId != null">
                and mapping_id = #{mappingId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mappingId" useGeneratedKeys="true">
        insert into springboot.dms_user_role_mapping(user_id, role_id)
        values (#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update springboot.dms_user_role_mapping
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where mapping_id = #{mappingId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from springboot.dms_user_role_mapping where mapping_id = #{mappingId}
    </delete>

</mapper>
